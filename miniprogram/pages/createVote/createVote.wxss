/* miniprogram/pages/createVote/createVote.wxss */

.minus-option {
  color: #e54d42;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin: 1vw;
  margin-right: 2vw;
}

.add-option {
  color: royalblue;
  margin: 1vw;
  margin-right: 2vw;
}

.vote-option {
  display: block;
}

.content input {
  display: inline-block;
}

.vote-type {
  margin: 0 1vw;
}

.cu-form-group {
  margin: 35rpx 20rpx;
  border: 1px solid white;
  border-radius: 45rpx;
}

.vote-title {
  font-size: medium;
}

.form-item {
  padding: 40rpx;
  margin: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.06), 0 -2rpx 2rpx rgba(0, 0, 0, 0.06);
}

textarea {
  height: 120rpx;
}

.image-bar {
  display: flex;
  justify-content: space-between;
}

.first-radio {
  position: relative;
}

.second-radio {
  position: absolute;
  left: 270rpx;
}

.third-radio {
  position: absolute;
  left: 400rpx;
}
