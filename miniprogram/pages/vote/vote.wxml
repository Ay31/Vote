<view class="vote-add">
    <cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
        <view slot="backText">返回</view>
        <view slot="content">创建投票</view>
    </cu-custom>
    <view class="cu-form-group">
        <view class="title">投标标题</view>
        <input placeholder="请输入投票标题,至少3个字" bindinput="bindTitleInput" value="{{newVoteTitle}}"></input>
    </view>
    <radio-group class="block" bindchange="radioChange">
        <view class="cu-form-group margin-top">
            <view class="title">
                投票类型
                <label wx:for="{{voteTypes}}" wx:key="{{inedx}}">
                    <radio class="blue vote-radio" value="{{item.name}}" checked="{{item.checked}}" />
                    {{item.value}}
                </label>
            </view>
        </view>
    </radio-group>
    <view class="cu-form-group align-start margin-top">
        <view class="title">投票描述</view>
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="bindDesTextAreaInput" placeholder="多行文本输入框" value="{{desTextareaData}}"></textarea>
    </view>
    <view class="cu-bar bg-white margin-top">
        <view class="action">投票配图</view>
        <view class="action">{{imgList.length}}/4</view>
    </view>
    <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
            <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
                <image src='{{imgList[index]}}' mode='aspectFill'></image>
                <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                    <text class="cuIcon-close"></text>
                </view>
            </view>
            <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
                <text class="cuIcon-cameraadd"></text>
            </view>
        </view>
    </view>
    <view class="cu-form-group margin-top">
        <view class="title">设置选项</view>
        <view class="vote-option" wx:for="{{voteOptionList}}" wx:key="{{index}}">
            <input placeholder="请输入投票内容" bindinput="bindVoteInput" value="{{newVoteOption}}"></input>
        </view>
    </view>
    <view class="vote-option">
        <i class="fa fa-minus-circle"></i>
        <text class="vote-option-content"></text>
    </view>
    <view class="vote-option">
        <i class="fa fa-plus-circle"></i>
        <text class="vote-option-content"></text>
    </view>
    <button type="defalut">
        <i class="fa fa-plus"></i>
        添加投票选项
    </button>
    <view class="padding flex flex-direction">
        <button class="cu-btn bg-blue lg" bindtap="postVote">提交</button>
    </view>
</view>