<view class="padding-lg">
  <text class="text-white text-sl">热门投票</text>
</view>
<view wx:for="{{voteData}}" wx:for-item="voteRecord" wx:for-index="voteListIndex">
  <view class="vote-item padding-xs radius shadow-warp bg-white margin-top">
    <view class="vote-item-hd bottom-line">
      <image src="{{voteRecord.userInfo.avatarUrl}}" lazy-load="true" mode="aspectFill"></image>
      <view class="vote-item-hd-info">
        <view class="nickname">{{voteRecord.userInfo.nickName}}</view>
        <view>{{voteRecord.voteData.createTime}}</view>
      </view>
      <!-- <view class="vote-item-hd-op {{delOpState?'vote-item-hd-op-hover':''}}" wx:if="{{true}}" data-index="{{voteIndex}}" data-voteid="{{voteRecord.voteData.id}}" bindtap="voteOP"> -->
    </view>
    <view class="vote-item-con">
      <view class="vote-item-con-hd bottom-line">
        <!-- 配图 begin -->
        <view class="vote-imgs {{voteRecord.voteData.imageList.length>=3?'vote-imgs-more':''}}" wx:if="{{voteRecord.voteData.imageList.length>0}}">
          <view wx:if="{{voteRecord.voteData.imageList.length<3}}" wx:for="{{voteRecord.voteData.imageList}}" wx:key="{{index}}" class="vote-img-box">
            <image data-src="{{item}}" lazy-load="true" data-images="{{voteRecord.voteData.imageList}}" src="{{item}}" mode="aspectFill" bindtap="bindPreviewImage"></image>
          </view>
          <view wx:if="{{voteRecord.voteData.imageList.length>=3}}">
            <swiper indicator-dots="true" indicator-color="#58c9b9" indicator-active-color="#d1b6e1">
              <block wx:for="{{voteRecord.voteData.imageList}}" wx:key="{{index}}">
                <swiper-item>
                  <image src="{{item}}" lazy-load="true" data-src="{{item}}" data-images="{{voteRecord.voteData.imageList}}" class="slide-image" width="100%" height="auto" mode="aspectFill" bindtap="bindPreviewImage"></image>
                </swiper-item>
              </block>
            </swiper>
          </view>
        </view>
        <!-- 配图 end -->
        <view class="vote-title">{{voteRecord.voteData.voteTitle}}</view>
        <view class="vote-des-content" wx:if="{{voteRecord.voteData.desTextareaData}}">
          {{voteRecord.voteData.desTextareaData}}
        </view>
      </view>
      <!-- 未投票 -->
      <view wx:if="{{voteRecord.beforeVote}}">
        <view wx:for="{{voteRecord.voteData.voteOptionList}}" wx:key="{{item.id}}">
          <!-- <view wx:if="{{index === voteRecord.voteData.voteOptionList.length-1}}" bindtap="onVote" data-index="{{index}}" data-vindex="{{voteIndex}}" data-src="{{item.id}}" class="vote-item-data" hover-class="vote-item-data-active">
                    {{item.content}}
                </view> -->
          <view class="vote-item-data bottom-line" catchtap="handleVote" data-content="{{item.content}}" data-option-id="{{item._id}}" data-index="{{voteListIndex}}" hover-class="vote-item-data-active">
            {{item.content}}
          </view>
        </view>
      </view>
      <!-- 当前用户已投票 begin -->
      <view wx:else>
        <view wx:for="{{voteRecord.voteData.voteOptionList}}" wx:key="{{item.id}}">
          <view class="vote-item-data vote-item-data-voted">
            {{item.content}}
            <text class="vote-item-data-percent">
              {{((item.count/voteRecord.voteData.votersCount)*100)}}%
            </text>
            <view class="progress-state" style="width:{{((item.count/voteRecord.voteData.votersCount)*100)}}%;background-color:{{votedColor[index]}};"></view>
          </view>
        </view>
      </view>
    </view>
    <!-- 跳转 -->
    <view class="vote-item-ft top-line">
      <i class="fa fa-align-left" bindtap="targetToVoteDetail" data-nickname="{{vote.data.user.nick_name}}" data-index="{{voteIndex}}" data-src="{{vote.data.id}}">
        <text>{{vote.data.voters_count}}</text>
      </i>
      <button open-type="share" plain="true" data-voteid="{{vote.data.id}}" data-cover="{{filter.delWithPath(vote.data.images[0].path)}}" data-title="{{vote.data.title}}" data-nickname="{{vote.data.user.nick_name}}" bindtap="onShareAppMessage">
        <i class="fa fa-share-square-o"></i>
      </button>
    </view>
  </view>
</view>