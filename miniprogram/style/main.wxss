/* 投票标题 */
.vote-title {
  margin-top: 14rpx;
  margin-bottom: 8rpx;
  padding: 0 28rpx;
  font-size: 32rpx;
  color: #515151;
}

.vote-item-con image {
  width: 100%;
}

.vote-item-con-hd {
  padding-bottom: 18rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 头部 */
.vote-item-hd {
  position: relative;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 20rpx;
}

.vote-item-hd .nickname {
  font-size: 24rpx;
  font-weight: 500;
  color: #7087f4;
}

.vote-item-hd image {
  width: 64rpx;
  height: 64rpx;
  margin: 0 16rpx 0 28rpx;
  border-radius: 64rpx;
}

/* 标题&时间 */
.vote-item-hd-info {
  color: #707070;
  height: 64rpx;
  line-height: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 标签 */
.vote-item-hd-op {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  position: absolute;
  top: 0;
  right: 28rpx;
  bottom: 0;
}

.vote-item-hd-op .fa-circle {
  margin-left: 6rpx;
  font-size: 10rpx;
  color: #8a8a8a;
}

.vote-item-hd-op-hover .fa-circle {
  color: #7087f4;
}

.vote-des-content {
  padding: 0 28rpx;
  font-size: 28rpx;
  padding-top: 10px;
}

/* 投票选项 */
.vote-item-data {
  position: relative;
  width: 100%;
  padding: 16rpx 0;
  text-align: center;
  box-sizing: border-box;
  color: #7087f4;
  -webkit-transition: all ease-in-out 0.3s;
  transition: all ease-in-out 0.3s;
}

.vote-item-data .progress-state {
  position: absolute;
  top: 0;
  left: 0;
  display: inline-block;
  height: 100%;
  opacity: 0.6;
}

.vote-item-data-percent {
  display: table;
  position: absolute;
  top: 0;
  right: 28rpx;
  bottom: 0;
  margin: auto;
  vertical-align: center;
  color: #7087f4;
}

.vote-item-data-voted {
  padding-right: 100rpx;
  padding-left: 28rpx;
  text-align: left;
  color: #515151;
  -webkit-transition: 2s width ease-in-out;
  transition: 2s width ease-in-out;
}

.vote-item-data-active {
  background-color: #e5e5e5 !important;
}

/* 底部 */
.vote-item-ft {
  -webkit-display: flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.vote-item-ft button {
  margin: 0;
  padding: 0;
  border: 0;
  line-height: 0;
  font-size: 36rpx;
  color: #707070;
}

.vote-item-ft .fa-align-left {
  font-size: 36rpx;
  color: #707070;
}

.bottom-line,
.top-line {
  position: relative;
}

.bottom-line:after,
.top-line:before {
  position: absolute;
  bottom: 0;
  left: 0;
  content: '';
  width: 100%;
  height: 2rpx;
  background-color: #f1f8f6;
}

.top-line::before {
  position: absolute;
  top: 0;
}

.no-more-tip {
  padding-bottom: 20rpx;
  font-size: 24rpx;
  color: #707070;
  text-align: center;
}

.no-vote-tip button {
  position: absolute;
  top: 640rpx;
  right: 0;
  left: 0;
  margin: auto;
  width: 412rpx;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #7087f4;
}

.fa-align-left text {
  margin-left: 8rpx;
  font-size: 24rpx;
  vertical-align: 4rpx;
}
